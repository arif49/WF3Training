      <ui:label>Content types</ui:label>
      <ui:description>Search query includes this content types</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>
          A list of content types to search for. If you specify
        content types here, then the search results will only contain content items of the
        those types. If you do not specify any content types then the default content type
          <code>Story</code>
          is used.
        </p>
      </doc:description>
      <array default="1" max="10" />
    </field>
    <field name="sections" type="collection" src="/webservice-extensions/wf/open-search/content-sections.jsp" select="title" mime-type="text/plain">
      <ui:label>Sections</ui:label>
      <ui:description>Search query includes these sections</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>A list of sections to search in. If you specify sections here, then the search results will only 
          contain content items that either belong to or appear in the specified sections or their subsections.</p>
        <p>If you do not specify any sections, then no section-based filtering is performed, and all
          sections are searched.</p>
      </doc:description>
      <array default="1" max="10" />
    </field>
    <field name="publicationPolicy" type="enumeration">
