      <ui:description>Lead text</ui:description>
    </field>
    <field name="description" type="basic" mime-type="text/plain">
      <ui:label>Description</ui:label>
      <ui:description>The Description of the forum.</ui:description>
      <ui:layout rows="10" cols="40" />
    </field>
    <field name="active" type="boolean">
      <ui:label>Active</ui:label>
      <ui:boolean-label value="true">Active forum</ui:boolean-label>
      <ui:boolean-label value="false">Inactive forum</ui:boolean-label>
      <ui:description>An active forum is open for comments. An inactive forum doesn't allow new comments.</ui:description>
      <ui:value-if-unset>true</ui:value-if-unset>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
    <field name="moderation-scheme" type="enumeration">
      <ui:label>Moderation scheme</ui:label>
      <enumeration value="post-moderation">
        <ui:label>Post moderation</ui:label>
      </enumeration>
      <enumeration value="pre-moderation">
        <ui:label>Pre moderation</ui:label>
      </enumeration>
      <ui:value-if-unset>post-moderation</ui:value-if-unset>
    </field>
