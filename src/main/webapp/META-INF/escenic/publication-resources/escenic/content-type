  <field-group name="basic-widget-style-fields">
    <field name="styleId" type="basic" mime-type="text/plain">
      <ui:label>Style Id</ui:label>
      <ui:description>Identifier for CSS declarations</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>
          Sets the
          <code>id</code>
          attribute of the
          <em class="gui-label">Wrapper</em>
          element. If you do not enter a value then the wrapper element has no
          <code>id</code>
          attribute.
        </p>
      </doc:description>
    </field>
    <field name="customStyleClass" type="basic" mime-type="text/plain">
      <ui:label>Style Class</ui:label>
      <ui:description>Class for CSS declarations</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>
          Sets the
          <code>class</code>
          attribute of the
          <em class="gui-label">Wrapper</em>
          element. You can enter several class names in this field. If you do not enter a value
          then the wrapper element has no
          <code>class</code>
          attribute.
        </p>
      </doc:description>
    </field>
  </field-group>
  <field-group name="caching-basic-fields">
    <field name="enableESI" type="boolean">
      <ui:label>Edge Side Includes (ESI)</ui:label>
      <ui:description>Check this option to enable ESI includes for this widget.
        You can only use this option if your installation includes a web cache (such as Varnish)
        that both supports ESI includes and has been configured to process them.</ui:description>
      <ui:boolean-label value="true">Enabled</ui:boolean-label>
      <ui:value-if-unset>false</ui:value-if-unset>
      <constraints>
        <required>true</required>
      </constraints>
    </field>
    <field name="maxAge" type="number">
      <ui:label>Maximum age (in seconds)</ui:label>
      <ui:description>How long the caching server can cache this widget (sets the HTTP header "Cache-Control:
        max-age=NNN")</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>
          Determines how long the caching server may cache this widget. It does so by setting
          the HTTP header
          <code>Cache-Control: max-age=NNN</code>
          .
        </p>
      </doc:description>
      <constraints>
        <minimum>0</minimum>
        <maximum>86400</maximum>
      </constraints>
      <ui:value-if-unset>60</ui:value-if-unset>
    </field>
  </field-group>
  <field-group name="cache-control-public-fields">
    <field name="cacheControlDirective" type="enumeration">
