  <content-type name="widget_searchConfig">
    <ui:icon>widget</ui:icon>
    <ui:label>Search Config widget</ui:label>
    <ui:description>Search Config widget</ui:description>
    <ui:title-field>title</ui:title-field>
    <parameter name="com.escenic.article.staging" value="false" />
    <doc:description xmlns="http://www.w3.org/1999/xhtml">
      <p>
        This widget holds the settings that govern the operation of a publication's
        search function. It is a
        <em>meta widget</em>
        with no physical representation, and is not
        rendered anywhere in the publication web site. It must be placed in the
        <em class="gui-label">Meta</em>
        area of the publication's search results page.
      </p>
      <p>This widget's settings allow you to control the following aspects of your 
        publication's search function:</p>
      <ol>
        <li>
          <p>Which publications are searched.</p>
        </li>
        <li>
          <p>Which sections are searched.</p>
        </li>
        <li>
          <p>Which content types are searched for.</p>
        </li>
        <li>
          <p>The pagination of the search results (how many results per page).</p>
        </li>
        <li>
          <p>Highlighting of the search results.</p>
        </li>
      </ol>
    </doc:description>
    <panel name="general">
      <ui:label>Search settings</ui:label>
      <ui:description>The settings of search config widget</ui:description>
      <doc:description xmlns="http://www.w3.org/1999/xhtml">
        <p>All the Search Config widget's settings are displayed on this tab.</p>
      </doc:description>
      <ref-field-group name="basic-widget-fields" />
      <ui:field-set style="box">
        <ui:label>Search query settings</ui:label>
        <ref-field-group name="searchConfig-widget-search-query-field" />
      </ui:field-set>
      <ui:field-set style="box">
        <ui:label>Pagination settings</ui:label>
        <ref-field-group name="searchConfig-widget-pagination-fields" />
      </ui:field-set>
      <ui:field-set style="box">
        <ui:label>Highlighting settings</ui:label>
        <ref-field-group name="searchConfig-widget-highlighting-fields" />
      </ui:field-set>
    </panel>
    <summary>
      <field mime-type="text/plain" type="basic" name="title">
        <ui:label>Title</ui:label>
        <ui:description>The name of the widget</ui:description>
      </field>
    </summary>
  </content-type>
  <field-group name="searchComponent-widget-searchbox-settings-fields">
    <field name="targetSection" type="collection" src="/webservice-extensions/wf/open-search/content-sections.jsp" select="title" mime-type="text/plain">
      <ui:label>Target section</ui:label>
      <ui:description>Select the section in which search results are to be displayed.</ui:description>
