#wf.contentprofile.newsletter.wireframe=mynewsletter

#facebook app id for facebook share, like, comments
facebook.app.id=

#Set user readable publication title
publication.title=

wf.clienttype.large=(min-width: 992px)
wf.clienttype.small=(max-width: 767px)
wf.clienttype.medium=(min-width: 768px) and (max-width: 991px)

# The root URL of static resources when loading from a different location(e.g. CDN) other than publication
wf.resource.static.rootUrl=

#configure if holder.js is included or not
wf.script.holder.enabled=true

# Configures if JS files in 'jscript' folder will be loaded individually, as opposed to single merged script
wf.scriptload.devmode=false

# Configure to let search engine- index the section page/follow links on the page
seo.section.allowIndex=true
seo.section.followlinks=true
