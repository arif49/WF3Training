# Set this to true to enable the generation of <esi:include/> tags (Edge Side Includes)
template.enableESI=false

template.wireframe.markup.file=default
theme.name=default
theme.variant=variant
theme.icon=favicon.png
theme.icon.apple-touch-icon-114-precomposed=apple-touch-icon-114-precomposed.png
theme.icon.apple-touch-icon-144-precomposed=apple-touch-icon-144-precomposed.png
theme.icon.apple-touch-icon-57-precomposed=apple-touch-icon-57-precomposed.png
theme.icon.apple-touch-icon-72-precomposed=apple-touch-icon-72-precomposed.png
theme.icon.msapplication-TileColor=#FFFFFF
theme.icon.msapplication-TileImage=windowsmetro-144.png

# The following two parameters are required for article comments widget
comments.unmoderated.forumId=
comments.moderated.forumId=

eae.logger.url=http://localhost:8080/analysis-logger/Logger
eae.queryservice.url=http://localhost:8080/analysis-qs/QueryService
eae.logger.tag.enabled=true

# The maximum allowed level of nesting of layout groups
nesting.limit=3

# The maximum allowed level of nesting for master widget
master.widget.nesting.limit=2

# Turn jsp.statistics=on, if you want to enable JSP statistics
jsp.statistics=off

# Community-engine related section parameters
usercontent.userProfile.articleTypeName=userProfile
usercontent.userProfile.uniqueName=profile
usercontent.news.uniqueName=content

# Locale name. Decides the active resource bundle. Setting the local
# to 'en_US' means that ApplicationResources_en.properties will be used.
locale=en_US

#wf designer mode theme upload parameter. Set value true if you want to enable theme uploading for designer
wf.template.designermode=

#required parameter for content profile and responsive images
#for making older publication to work you can set 'config' as the root for default content profile like
#wf.contentprofile.default.rootConfig=config
wf.contentprofile.default.rootConfig=config.default
wf.contentprofile.default.image.breakpoints.fluid=320,480,640,767
wf.contentprofile.default.image.grid.refViewportWidth=1140
wf.contentprofile.default.image.grid.gridViewportWidth=1140
wf.contentprofile.default.image.policy=adaptive
wf.contentprofile.default.image.preload=placeholder
wf.contentprofile.default.image.proxy.size.min=80
wf.contentprofile.default.image.proxy.size.max=200
wf.contentprofile.default.image.proxy.size.scale=30
wf.contentprofile.default.image.proxy.enable.imagesize.min=200

wf.contentprofile.default.wireframe=default

# This configuration is to show content item inline in the section context
wf.contentprofile.inline.rootConfig=config.inline
wf.contentprofile.inline.wireframe=inline
wf.contentprofile.inline.image.policy=adaptive
wf.contentprofile.inline.image.preload=placeholder

#Example configuration for newsletter as content profile
